<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <!-- Prise en charge de fontAwesome-->
         <script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>
        <!-- Prise en charge de Bootstrap 5 -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        <!-- Afficher un message -->
        {% for type, messages in app.flashes %}
            {% for m in messages %}
                <p class="alert alert-{{ type }}"> {{ m }}</p>
            {% endfor %}
        {% endfor %}
        
    </head>
    <!-- Affichage de la page d'accueil conditionné en fonction de l'état de connexion -->
    <nav style="background-color:#4DB125;" class="navbar navbar-expand-lg">
    <img class="png" src="../img/logo.png" alt="Logo Micromania">
        <div style="background-color:#4DB125;" class=" navbar" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {% if app.user %}
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <li class="nav-item active">
                        <i class="fas fa-smile"></i><a class="nav-link" href="{{ path('app_stat')}}"><h4>{{ 'accueil.Stat'|trans }}</h4></a>
                    </li>
                {% endif %}
                    <li class="nav-item active">
                        <i class="fas fa-gamepad"></i><a class="nav-link" href="{{ path('app_produit')}}"><h4>{{ 'accueil.Jeux'|trans }}</h4></a>
                    </li>
                    <li class="nav-item active">
                        <i class="fas fa-user-circle"></i><a class="nav-link" href="{{ path('app_compte') }}"><h4>{{ 'accueil.Compte'|trans }}</h4></a>
                    </li>
                    <li class="nav-item active">
                        <i class="fas fa-shopping-basket"></i><a class="nav-link" href="{{ path('app_panier')}}"><h4>{{ 'accueil.Panier'|trans }}</h4></a>
                    </li>
                    <li class="nav-item active">
                        <i class="fas fa-sign-out-alt"></i><a class="nav-link" href="{{ path('app_logout')}}"><h4>{{ 'accueil.Deconnexion'|trans }}</h4></a>
                    </li>
                {% else %}
                    <li class="nav-item active">
                        <i class="fas fa-user"></i><a class="nav-link" href="{{ path('app_login')}}"><h4>{{ 'accueil.Connexion'|trans }}</h4></a>
                    </li>
                    <li class="nav-item">
                        <i class="fas fa-user-edit"></i><a class="nav-link" href="{{ path('app_register')}}"><h4>{{ 'accueil.Inscription'|trans }}</h4></a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
